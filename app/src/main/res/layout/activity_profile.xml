<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="nyc.c4q.ashiquechowdhury.finalexam.ProfileActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/ic_people_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/activity_profile_large_image"
            android:layout_height="@dimen/activity_profile_large_image"
            android:layout_marginBottom="@dimen/activity_profile_space_under_large"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <ImageButton
                android:onClick="onClickHeart"
                android:src="@drawable/ic_favorite_black_24dp"
                android:id="@+id/image_button_one"
                android:scaleType="fitXY"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                android:layout_margin="@dimen/activity_profile_button_margins"/>
            <ImageButton
                android:onClick="onClickMessage"
                android:src="@drawable/ic_mail_outline_black_24dp"
                android:layout_toRightOf="@id/image_button_one"
                android:id="@+id/image_button_two"
                android:scaleType="fitXY"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                android:layout_margin="@dimen/activity_profile_button_margins"/>
            <ImageButton
                android:onClick="onClickSettings"
                android:src="@drawable/ic_star_black_24dp"
                android:layout_toRightOf="@id/image_button_two"
                android:id="@+id/image_button_three"
                android:scaleType="fitXY"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                android:layout_margin="@dimen/activity_profile_button_margins"/>
            <ImageButton
                android:onClick="onClickLogout"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_toRightOf="@id/image_button_three"
                android:id="@+id/image_button_four"
                android:scaleType="fitXY"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                android:layout_margin="@dimen/activity_profile_button_margins"/>
            <TextView
                android:text="Heart"
                android:gravity="center"
                android:layout_margin="@dimen/activity_profile_button_margins"
                android:id="@+id/text_view_one"
                android:layout_below="@id/image_button_one"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                />
            <TextView
                android:text="message"
                android:gravity="center"
                android:layout_margin="@dimen/activity_profile_button_margins"
                android:id="@+id/text_view_two"
                android:layout_toRightOf="@id/image_button_one"
                android:layout_below="@id/image_button_three"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                />
            <TextView
                android:text="settings"
                android:gravity="center"
                android:layout_margin="@dimen/activity_profile_button_margins"
                android:id="@+id/text_view_three"
                android:layout_toRightOf="@id/text_view_two"
                android:layout_below="@id/image_button_one"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                />
            <TextView
                android:text="center"
                android:gravity="center"
                android:layout_margin="@dimen/activity_profile_button_margins"
                android:layout_toRightOf="@id/text_view_three"
                android:id="@+id/text_view_four"
                android:layout_below="@id/image_button_four"
                android:layout_width="@dimen/activity_profile_imagebutton"
                android:layout_height="@dimen/activity_profile_imagebutton"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_width="@dimen/drawer_default_height"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/ic_people_black_24dp"
            android:background="#FF00FFFF"
            android:layout_width="320dp"
            android:layout_height="@dimen/nav_drawer_image_height" />
        <android.support.v7.widget.RecyclerView
            android:background="#FFF5F500"
            android:id="@+id/nav_drawer_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>